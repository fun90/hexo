mixin index()
  - var prev = page.prev_link
  - var next = page.next_link
  .paginator
    if page.prev
      .prev-wrap.col-md-6.col-xs-6
        i.fa.fa-angle-double-left
        a.prev-page(href=url_for(page.prev_link))!= __('Previous')
    if page.next && !page.prev
      .next-wrap.col-md-6.col-xs-6.col-md-offset-6.col-xs-offset-6
        a.next-page(href=url_for(page.next_link))!= __('Next')
        i.fa.fa-angle-double-right
    if page.next && page.prev
      .next-wrap.col-md-6.col-xs-6
        a.next-page(href=url_for(page.next_link))!= __('Next')
        i.fa.fa-angle-double-right
mixin post()
  -var prev = page.prev ? page.prev.path : false;
  -var next = page.next ? page.next.path : false;
  .post-nav
    if prev
      -var title = page.prev.title !== '' ? page.prev.title:"(No Title)"
      .prev-wrap.col-md-6.col-xs-6
        i.fa.fa-angle-double-left
        a.prev-post(href=url_for(prev))!= title
    if next && !prev
      -var title = page.next.title !== '' ? page.next.title:"(No Title)"
      .next-wrap.col-md-6.col-xs-6.col-md-offset-6.col-xs-offset-6
        a.next-post(href=url_for(next))!= title
        i.fa.fa-angle-double-right
    if next && prev
      -var title = page.next.title !== ''? page.next.title:"(No Title)"
      .next-wrap.col-md-6.col-xs-6
        a.next-post(href=url_for(next))!= title
        i.fa.fa-angle-double-right
