html,
body
  color $theme-text-color
  background-color $theme-background
  base-font-size(100%)

a
  color $theme-color
  &:hover
    text-decoration none
    color-revert()
    transition all .25s
    cursor pointer

strong
  color $theme-text-color

h1, h2, h3, h4, h5, h6
  color $theme-text-color

.highlight .line {
    height: 18px;
}

.post-content 
  > p img
    display block
    margin 0 auto